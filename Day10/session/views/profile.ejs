<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Segoe UI", sans-serif;
    }

    body {
      min-height: 100vh;
      background: #f4f4f9;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    /* ðŸ”¹ Full Page Profile (cover + info) */
    .profile-header {
      width: 100%;
      text-align: center;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      padding: 50px 20px;
      position: relative;
    }

    .profile-header img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #fff;
      margin-bottom: 15px;
      background: #fff;
    }

    .profile-header h1 {
      font-size: 28px;
      margin-bottom: 5px;
    }

    .profile-header p {
      font-size: 16px;
      opacity: 0.9;
    }

    /* ðŸ”¹ Profile Card (smaller version inside page) */
    .profile-card {
      width: 350px;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      overflow: hidden;
      text-align: center;
      margin-top: 40px;
    }

    .banner {
      width: 100%;
      height: 120px;
      background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .profile-pic {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 4px solid #fff;
      margin-top: -50px;
      background: #fff;
    }

    .name {
      font-size: 20px;
      font-weight: bold;
      margin: 10px 0 5px;
    }

    .title {
      font-size: 14px;
      color: #777;
      margin-bottom: 15px;
    }

    .bio {
      font-size: 13px;
      color: #555;
      padding: 0 20px;
      margin-bottom: 20px;
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 15px;
      padding-bottom: 20px;
    }

    .social-links a {
      text-decoration: none;
      color: #667eea;
      font-weight: 500;
      transition: 0.3s;
    }

    .social-links a:hover {
      color: #764ba2;
    }
  </style>
</head>
<body>
    <%- include('./partials/header')  %>
  <!-- ðŸ”¹ Full Page Profile -->
  <div class="profile-header">
    <h1><%= username %></h1>
    <p>Branding & Creative Designer</p>
  </div>

  <!-- ðŸ”¹ Small Profile Card -->
  <div class="profile-card">
    <div class="banner"></div>
    <h2 class="name">Reem Mohamed</h2>
    <p class="title">Brand Designer</p>
    <p class="bio">Passionate about building memorable brands with clean and modern design.</p>
    <div class="social-links">
      <a href="#">Behance</a>
      <a href="#">Dribbble</a>
      <a href="#">LinkedIn</a>
    </div>
  </div>
  <%for (let index = 0; index < 10; index++) {
    const element = { name: `Social Link ${index + 1}` } %>
    <div class="social-links">
      <a href="#"><%= element.name %></a>
    </div>
  <% } %>

  <%if (role==="admin") {
    tasks.forEach(task => {
      %>
      <div class="task">
        <h3><%= task.title %></h3>
        <p><%= task.description %></p>
      </div>
      <%
    });
  }%>
</body>
</html>
